{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container my-2 text-center">
        <!--    ocultar en sm-->
        <div class="d-none  d-md-block bg-white p-3">
            <div class="text-left mx-3">
                <h1> {{ post.title }} </h1>
                <p> {{ post.user.username }} el {{ post.creationdate | date }}</p>
                <div class="my-2">
                    <span class="alert-success py-1 px-5"> {{ post.type }}</span>
                </div>
            </div>
            <div style="display: flex">
                <div class="w-25 mx-3">
                    <span><img class="" src="{{ asset('img/' ~ post.file) }}" width="100%" style="clear: both"></span>
                </div>
                <div class="w-75 mx-2 text-justify ">
                    {{ post.description }}
                </div>
            </div>

        </div>
        <!--    ocultar en MD-->
        <div class="d-block d-sm-block d-md-none  my-2">
            <div class="row">
                <div class="col-md-12">
                    <div class="p-2 border bg-white">
                        <div class="text-left">
                            <h1> {{ post.title }} </h1>
                            <p>Por {{ post.user.username }} el {{ post.creationdate | date }}</p>
                            <div class="mb-4">
                                <span class="alert-success py-1 px-5"> {{ post.type }}</span>
                            </div>
                        </div>
                        <img src=" {{ asset('img/' ~ post.file ) }} " width="100%" style="clear: both">
                        <div class="w-100 text-justify">
                            {{ post.description }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}