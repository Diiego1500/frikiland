{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container my-2">
        <div class="row">
            <div class="col-md-8 my-2">
                <div class="p-2 border bg-white">
                    <div id="accordion" class="p-1 my-2">
                        <div class="card">
                            <div class="card-header" id="headingOne">
                                <h5 class="mb-0">
                                    <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne"
                                            aria-expanded="true" aria-controls="collapseOne">
                                        Publica algo nuevo
                                    </button>
                                </h5>
                            </div>
                            <!--                    <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion" style="background-color: #EFFFFD">-->
                            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion"
                                 style="background-color: #DAF1F9">
                                {{ form_start(form) }}
                                <div class="row p-2">
                                    <div class="col-md-6">
                                        {{ form_widget(form.title, {attr:{'placeholder':'Titulo', 'class':'form-control'}}) }}
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_widget(form.type, {attr:{'class':'form-control'}}) }}
                                    </div>
                                    <div class="col-md-12 my-2">
                                        {{ form_widget(form.description, {attr:{'class':'form-control', 'placeholder': '¿Qué quieres contar?'}}) }}
                                    </div>
                                    <div class="col-md-12 text-center">
                                        {{ form_widget(form.file, {attr:{'class':'form-control'}}) }}
                                        {{ form_widget(form.save, {attr:{'class':'my-2 btn btn-success'}}) }}
                                    </div>

                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>

                    {% for post in posts %}
                        <div class="container">
                            <div class="row border custom-shadow">
                                <div class="col-md-9 ">
                                    <div class=" my-2 px-1 py-2">
                                        <a href="{{ path('postDetails', {id: post.id, url: post.url}) }}"><h4> {{post.title}} <span
                                                        style="color: orange"><i
                                                            class="fa-solid fa-star"></i></span>
                                            </h4>
                                        </a>
                                        <p>Por {{ post.user.username }} el {{ post.creationdate | date }}</p>
                                        <div class="my-2">
                                            <span class="alert-success py-1 px-5">{{post.type}}</span>
                                        </div>
                                        <div>
                                            {{post.description}}
                                        </div>

                                    </div>
                                </div>
                                <div class="col-md-3 my-auto">
                                    <img src="{{ asset('img/' ~ post.file) }}" alt="Not found" width="100%">
                                    <div class="my-2">
                                        <div class="py-1 my-1 text-center">
                                            <a href="#"><i class="fa-solid fa-thumbs-up"></i> Me gusta</a>
                                        </div>
                                        <div class="py-1 my-1 text-center">
                                            <a href="#"><i class="fa-solid fa-thumbs-down"></i> No Me
                                                gusta</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr>
                    {% else %}
                        <div class="alert alert-warning"><Strong>NO hay ningún post, sé el primero!</Strong></div>
                    {%endfor%}
                </div>
            </div>
            <div class="col-md-4 my-2">
                <div class="p-1 border bg-white">
                    <div class="my-2 border px-1 py-2 alert alert-info" style="height: 150px">
                        <h3>INFO HERE</h3>
                    </div>
                    <div class="my-2 border px-1 py-2 alert alert-info" style="height: 150px">
                        <h3>INFO HERE</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
