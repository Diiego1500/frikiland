{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Cursos{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row justify-content-md-center my-3">
            {% for course in courses %}
                {% if course.isfree %}
                    {% set custom_border_class = "border border-success" %}
                    {% set custom_dinamic_shadow = 'custom-green-shadow' %}
                {% else %}
                    {% set custom_border_class = "border border-warning" %}
                    {% set custom_dinamic_shadow = 'custom-yellow-shadow' %}
                {% endif %}
                <div class="col-md-4 my-3">
                    <div class="px-1 rounded {{ custom_border_class }} bg-white {{ custom_dinamic_shadow }}">
                        <div class="row mt-2">
                            <div class="col-md-3">
                                <img src="{{ asset('uploads/files/'~course.image) }}" alt="{{ course.title }}" width="100%">
                            </div>
                            <div class="col-md-auto text-left">
                                <div><h5>{{ course.title }}</h5></div>
                                <div>
                                    {% if course.isfree %}
                                        <small class="border border-success p-1 rounded alert-success">ü§© Gratis!</small>
                                    {% else %}
                                        <small class="border border-warning p-1 rounded alert-warning">üíõ Prometo ense√±arte con amor. (${{ course.price }} USD)</small>
                                    {% endif %}
                                </div>
                                <div style="color: gray"><small>Lanzamiento: {{ course.creationdate |date("m/d/Y") }}</small></div>
                            </div>
                            <div class="col-md-12 mt-2">
                                {{ course.shortdescription }}
                            </div>

                            <div class="col-md-12 my-3 text-right">
                                {% if course.isfree %}
                                    <a class="btn btn-info" href="{{ path('buy_course', {id:course.id}) }}">Curso Gratis ‚û°Ô∏è</a>
                                {% else %}
                                    {% if course.id in course_access %}
                                        <a class="btn btn-success" href="{{ path('buy_course', {id:course.id}) }}">Ya has adquirito este cursoÔ∏è</a>
                                    {% else %}
                                        <a class="btn btn-info" href="{{ path('buy_course', {id:course.id}) }}">(${{ course.price }} USD) Comprar  ‚û°Ô∏è</a>
                                    {% endif %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-warning">
                    <strong>¬°Ten paciencia! El administrador est√° trabajando duro para crear cursos maravillosos para ti</strong>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
