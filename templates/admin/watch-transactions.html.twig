{% extends 'base.html.twig' %}

{% block title %}transacciones{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <table class="table table-striped table-responsive table-responsive-sm">
            <thead>
            <tr>
                <th>Curso</th>
                <th>Fecha</th>
                <th>Usuario</th>
                <th>Detalles</th>
            </tr>
            <tbody>
            {% for transaction in transactions %}
                <tr>
                    <td>{{ transaction.coursename }}</td>
                    <td>{{ transaction.creationdate |date("m/d/Y") }}</td>
                    <td>{{ transaction.user.email }}</td>
                    <td>{{ transaction.details }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">
                        <div class="alert alert-danger"> Nadie te ha comprado </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            </thead>
        </table>
    </div>
{% endblock %}